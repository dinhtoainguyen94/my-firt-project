
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listNewProduct = (List<Model.EF.SanPham>)ViewBag.NewProduct;
    var ListAccessories = (List<Model.EF.SanPham>)ViewBag.Accessories;
}
@section slide{
    <div class="header_slide">
    <div class="header_bottom_left">
        <div class="categories">
            @{Html.RenderAction("ProductCategory", "Product");}
            </div>
        </div>
    <div class="header_bottom_right">
        <div class="slider">
            @{Html.RenderAction("Slide", "Product");}
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
</div>

    }

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Sản Phẩm Mới</h3>
        </div>
        <div class="see">
            <p><a href="/san-pham">Xem tất cả</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in listNewProduct)
        {
            var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID_SP;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@url"><img src="@item.Image" alt="@item.Name" /></a>
            <h2>@item.Name </h2>
            <div class="price-details">
                <div class="price-number">
                    <p><span class="rupees">@(item.Price.HasValue?item.Price.Value.ToString("N0"):"Liên Hệ")</span></p>
                </div>
                <div class="add-cart">
                    <h4><a href="them-gio-hang?productId=@item.ID_SP&quantity=1">Thêm Vào Giỏ</a></h4> 
                </div>
                <div class="clear"></div>
            </div>
        </div>
        }
        
    </div>
    <div class="content_bottom">
        <div class="heading">
            <h3>Phụ Kiện Nam</h3>
        </div>
        <div class="see">
            <p><a href="#">Xem tất cả</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in ListAccessories)
        {
            var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID_SP;
            <div class="grid_1_of_4 images_1_of_4">
            <a href="@url"><img src="@item.Image" alt="@item.Name" /></a>
            <h2>@item.Name</h2>
            <div class="price-details">
                <div class="price-number">
                    <p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên Hệ")</span></p>
                </div>
                <div class="add-cart">
                    <h4><a href="them-gio-hang?productId=@item.ID_SP&quantity=1">Add to Cart</a></h4>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        }
        
    </div>
</div>
