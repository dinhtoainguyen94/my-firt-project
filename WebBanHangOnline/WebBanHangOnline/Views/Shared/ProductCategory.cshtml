@model List<Model.EF.DanhMucSP>

    <h3>Danh Mục Sản Phẩm</h3>
    <ul>
        @foreach (var item in Model.Where(x=>x.ParentID == null))
        {
            var child = Model.Where(x => x.ParentID == item.ID_DMSP);
            var parentClass = child.Count() > 0 ? "class= dropdown-toggle data-toggle = dropdown" : "";
            <li class="dropdown">
                <a href="/san-pham/@item.MetaTitle-@item.ID_DMSP" @parentClass>@item.Name</a>
                @if (child.Count() > 0)
                {
                  <ul class="dropdown-menu">
                    @foreach (var childItem in child)
                    {
                        <li><a href="/san-pham/@item.MetaTitle-@item.ID_DMSP">@childItem.Name</a></li>
                    }
                 </ul>
                }               
            </li>
        }    
    </ul>